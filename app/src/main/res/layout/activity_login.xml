<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/primary_color"
        tools:context=".LoginActivity">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView android:layout_width="180dp"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="25dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="10dp"
                      android:text="Substation Event Reporting"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:textSize="32dp"/>

            <ImageView android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:layout_marginRight="20dp"
                       android:src="@drawable/wbsedcl_logo"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                      android:layout_height="470dp"
                      android:orientation="vertical"
                      android:background="@drawable/white_foreground_layer">

        <EditText
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/userid_hint"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/user_without_circle"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColorHint="#767676"
                android:textColor="#767676"
                android:background="@drawable/edit_text_login"/>
        <EditText
                android:inputType="textPassword"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/password"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="14dp"
                android:hint="Password"
                android:textColorHint="#767676"
                android:textColor="#767676"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_login"/>
        
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Forgot password?"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="20dp"
                  android:textColor="@color/primary_color"/>
        
        <android.widget.Button
                android:id="@+id/btnLogIn"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Log In"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginTop="120dp"
                android:background="@drawable/blue_filled_in_button"
                android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>




